{
    "manifest_version": 2,
    "name": "RaptorWatch",
    "version": "1.0",
  
    "description": "Detects Phishing emails within emails opened in Firefox.",
  
    "icons": {
      "48": "icons/RaptorWatchLogo.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.mozilla.org/*"],
        "js": ["raptor.js"]
      }
    ],

    "browser_action": {
      "default_icon": { 
        "48": "icons/RaptorWatchLogo.png"
      },
      
      "default_popup": "site.html"
    },

    "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"],

    "background": {
    "scripts": ["background.js"]
    },

    "content_security_policy": "default-src 'self'"

      
  }


  